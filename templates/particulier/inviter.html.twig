{% extends 'layout.html.twig' %}

{% block title %}Essayara{% endblock %}

{% block LinksCss %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/stylebutton.css') }}">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <style>
.inviter-container {
    max-width: 1100px;
    margin: 3rem auto;
    padding: 2rem;
    background: #f9f9f9;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.08);
}

.inviter-container h1 {
    text-align: center;
    font-size: 2.3rem;
    font-weight: 700;
    margin-bottom: 3rem;
    color: #222;
}

.inviter-content {
    display: flex;
    align-items: stretch;
    gap: 2rem;
}

/* Texte */
.inviter-text {
    flex: 1;
    font-size: 1.1rem;
    color: #555;
    line-height: 1.7;
}

/* Diviseur */
.inviter-divider {
    width: 4px;
    background: linear-gradient(45deg, #00B7B7, #008F8F);
    border-radius: 10px;
    align-self: stretch; /* prend toute la hauteur */
}

/* Vidéo */
.inviter-video-wrapper {
    flex: 1;
    display: flex;
    justify-content: center;
}

.inviter-video {
    width: 260px;
    aspect-ratio: 9 / 16;
    border-radius: 20px;
    object-fit: cover;
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
}

/* Bouton */
.btn-registerinvit {
    padding: 0.75rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 50px;
    background: linear-gradient(45deg, #00B7B7, #008F8F);
    color: #fff;
    transition: 0.3s;
    border: none;
}

.btn-registerinvit:hover {
    background: linear-gradient(45deg, #008F8F, #00B7B7);
    color: #fff;
    text-decoration: none;
}

.gradient-text {
    background: linear-gradient(45deg, #00B7B7, #008F8F);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
}

/* Responsive */
@media (max-width: 768px) {
    .inviter-content {
        flex-direction: column-reverse; /* vidéo avant texte */
        gap: 1.5rem;
    }

    .inviter-divider {
        width: 100%;
        height: 4px;
    }

    .inviter-video {
        width: 220px;
    }
}
    </style>
{% endblock %}

{% block Content %}
    {% block loader %}
        {{ parent() }}
    {% endblock %}

<section class="inviter-container">
    <h1 data-aos="fade-down" data-aos-duration="1000">
        Bienvenue, <span class="gradient-text">Annonceur de pièces automobiles</span> !
    </h1>

    <div class="inviter-content" data-aos="fade-up">
        <!-- Texte à gauche -->
        <div class="inviter-text">
            {% if invitePage %}
                {{ invitePage.description|raw }}
            {% else %}
                <p>
                    Vous avez une pièce manquante pour votre véhicule que vous cherchez à acheter ?  
                    Ou vous possédez une pièce supplémentaire que quelqu’un pourrait vouloir acheter ?
                </p>
                <p>
                    Sur notre plateforme, vous pouvez publier vos besoins ou vos offres de pièces facilement et rapidement.
                </p>
                <p>
                    Discutez avec d’autres utilisateurs pour échanger des informations, poser des questions et trouver exactement ce que vous cherchez.
                </p>
            {% endif %}
  <br><br>
            <a href="{{ path('app_register') }}" class="btn btn-registerinvit">
               Créer un compte
            </a>
        </div>

        <!-- Séparateur -->
        <div class="inviter-divider"></div>

        <!-- Vidéo à droite -->
        <div class="inviter-video-wrapper">
            {% if invitePage and invitePage.videoPath %}
                <video class="inviter-video" controls>
                    <source src="{{ invitePage.videoPath }}" type="video/mp4">
                    Votre navigateur ne supporte pas la vidéo.
                </video>
            {% else %}
                <video class="inviter-video" controls>
                    <source src="{{ asset('videos/descriptif_particulier.mp4') }}" type="video/mp4">
                    Votre navigateur ne supporte pas la vidéo.
                </video>
            {% endif %}
        </div>
    </div>
</section>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            once: true,
            offset: 100
        });
    </script>
{% endblock %}
