{% block javascript %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/dayjs@1/dayjs.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/dayjs@1/plugin/relativeTime.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/dayjs@1/locale/fr.js"></script>
    <script>
        dayjs.extend(dayjs_plugin_relativeTime)
        dayjs.locale('fr')
        document.querySelectorAll('.time-ago').forEach(el => {
            let ts = el.dataset.timestamp
            el.textContent = dayjs.unix(ts).fromNow()
        })


        
    </script>
    <script>
function filtrerAnnonces() {
    var url = "{{ path('recherche_annonces') }}"; // route côté Symfony pour filtrer les annonces

    var data = {
        marque: $('#marque').val(),
        zone: $('select[name="zone"]').val(),
        date: $('select[name="date"]').val(),
        prix: $('select[name="prix"]').val() // si tu ajoutes un filtre prix
    };

    $.ajax({
        type: "POST",
        url: url,
        data: data,
        beforeSend: function(){ $('#loaderAcc1').show(); },
        complete: function(){ $('#loaderAcc1').hide(); },
        success: function(annonces) {
            var html = "";

            if (annonces.length === 0) {
                html = `<div class="text-center p-3" style="margin: auto">
                            <i class="las la-frown la-3x opacity-60 mb-3"></i>
                            <h3 class="h6 fw-700">Aucune annonce trouvée</h3>
                        </div>`;
            } else {
                annonces.forEach(function(a) {
 let annonceUrl = "{{ path('detail_annonce_accueil', {'id': 'ID_ANNONCE'}) }}".replace('ID_ANNONCE', a.id);
                    html += `
<div class="col-custom">
    <a href="${annonceUrl}" class="text-reset text-decoration-none">
        <div class="aiz-card-box">
            <img class="card-img" src="${a.imagePrincipale || '/images/placeholder.png'}" alt="${a.nom}">
            <span class="badge-custom">Occasion</span>
            <div class="p-3">
                <div class="price">${a.prix} TND</div>
                <div class="title text-truncate-2">${a.nom}</div>
                <p class="info mb-1">
                    <i class="bi bi-geo-alt" style="color: #00B7B7;"></i> ${a.user.adresse || 'Adresse non renseignée'}
                </p>
                <p class="info mb-0">
                    <i class="bi bi-clock" style="color: #00B7B7;"></i>
                    <span class="time-ago" data-timestamp="${a.dateCreation}"></span>
                </p>
            </div>
        </div>
    </a>
</div>`;
                });
            }

            $('.row.g-3').html(html);

            // Mettre à jour les dates relatives
            dayjs.locale('fr');
            document.querySelectorAll('.time-ago').forEach(el => {
                let ts = el.dataset.timestamp;
                el.textContent = dayjs.unix(ts).fromNow();
            });
        }
    });
}

// Ajouter l'événement onchange sur tous les filtres
$('#filter-form select').on('change', filtrerAnnonces);
</script>

