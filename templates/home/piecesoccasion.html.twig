            .title { font-size: 14px; font-weight: 600; color: #222; margin-bottom: 4px; }
            .info { font-size: 12px; color: #777; display: flex; align-items: center; }
            .info i { font-size: 14px; margin-right: 4px; opacity: 0.7; }

