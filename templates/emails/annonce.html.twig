{# templates/emails/annonce_created.html.twig #}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional //EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title></title>

  <style type="text/css">
    body {
      margin: 0;
      padding: 0;
      background-color: #f9f9f9;
      font-family: Arial, sans-serif;
    }
    table { border-collapse: collapse; }
    a { text-decoration: none; }
    .container { max-width: 600px; background-color: #ffffff; }
    .social-icon { width: 32px; height: 32px; margin: 0 5px; }
  </style>
</head>

<body>
<table width="100%" cellpadding="0" cellspacing="0" style="background-color:#f9f9f9;">
  <tr>
    <td align="center">

      <!-- Logo -->
      <table class="container" width="600" cellpadding="0" cellspacing="0" style="background-color:#e2e5ec;">
        <tr>
          <td align="center" style="padding:20px;">
            <img src="cid:logo" alt="Essayara" style="max-width:200px;">
          </td>
        </tr>
      </table>

      <!-- Contenu principal -->
      <table class="container" width="600" cellpadding="0" cellspacing="0">
        <tr>
          <td align="center" style="padding:30px 20px 10px;">
            <img src="cid:Tick" alt="Success" style="width:80px;">
          </td>
        </tr>

        <tr>
          <td align="center" style="padding:10px 20px;">
            <h1 style="font-size:24px; margin:0;">
              Votre annonce a été créée 
            </h1>
          </td>
        </tr>

        <tr>
          <td style="padding:10px 40px 30px; font-size:15px; line-height:1.6; color:#000;">
            <p>Bonjour {{ user.nom }},</p>

            <p>
              Votre annonce <strong>{{ annonce.nom }}</strong> a été créée avec succès.
            </p>

            <p>
              <strong>Marque :</strong> {{ annonce.marque }}<br>
              <strong>Modèle :</strong> {{ annonce.modele }}<br>
              <strong>Prix :</strong> {{ annonce.prix }} DT
            </p>

            <p style="margin-top:15px; color:#333;">
               Votre annonce sera publiée après vérification et confirmation par notre administrateur.<br>
               Délai maximum de publication : <strong>24 heures</strong>.
            </p>

            {% if annonce.imagePrincipale %}
              <p style="text-align:center; margin-top:20px;">
                <img src="{{ annonce.imagePrincipale }}" style="max-width:100%; border-radius:10px;">
              </p>
            {% endif %}
          </td>
        </tr>
      </table>

      <!-- Social Media -->
      <table class="container" width="600" cellpadding="0" cellspacing="0" style="background-color:#e2e5ec;">
        <tr>
          <td align="center" style="padding:20px;">
            <a href="https://facebook.com">
              <img src="cid:facebook" class="social-icon" alt="Facebook">
            </a>
            <a href="https://instagram.com">
              <img src="cid:instagram" class="social-icon" alt="Instagram">
            </a>
            
          </td>
        </tr>
      </table>

      <!-- Footer -->
      <table class="container" width="600" cellpadding="0" cellspacing="0" style="background-color:#e2e5ec;">
        <tr>
          <td align="center" style="padding:20px;">
            <p style="font-size:16px; color:#3C4C5C; margin:0;">
              <strong>essayara.com</strong>
            </p>
            <p style="font-size:14px; color:#7a7a7a; margin:5px 0;">
              Tunisie | +216 90 256 692
            </p>
            <p style="font-size:13px; color:#b0b1b4; margin:0;">
              © 2026 Tous droits réservés
            </p>
          </td>
        </tr>
      </table>

    </td>
  </tr>
</table>
</body>
</html>
