<script>
document.addEventListener('DOMContentLoaded', function() {
    const btn = document.getElementById('show-number-btn');
    const telContainer = document.getElementById('tel-container');
    btn.addEventListener('click', function() {
        // Crée le champ avec le numéro
        const input = document.createElement('input');
        input.type = 'text';
        input.value = '{{ annonce.user.tel1 ?? "Numéro non disponible" }}';
        input.readOnly = true;
        input.className = 'form-control fw-bold text-center';
        input.style.width = '150px';

        // Crée le bouton copier
        const copyBtn = document.createElement('button');
        copyBtn.type = 'button';
        copyBtn.className = 'btn btn-Dashboard1 fw-bold';
        copyBtn.innerHTML = '<i class="las la-copy"></i>';

        copyBtn.addEventListener('click', function() {
            navigator.clipboard.writeText(input.value).then(() => {
                AIZ.plugins.notify('success', 'Numéro copié!');
            });
        });

        telContainer.innerHTML = '';
        telContainer.appendChild(input);
        telContainer.appendChild(copyBtn);
    });
});

