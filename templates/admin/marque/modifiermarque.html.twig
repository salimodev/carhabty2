{% extends 'layoutAdmin.html.twig' %}

{% block title %}Modifier Marque{% endblock %}
{% block Head %}
    {{ parent() }}
    {% block LinksCss %}
        {{ parent() }}
         <link rel="stylesheet" href="{{ asset ('css/stylebutton.css') }}">
        
    {% endblock %}
{% endblock %}
{% block page %}
{{ parent() }}

<div class="aiz-main-content">
    <div class="px-15px px-lg-25px">
        <div class="aiz-titlebar text-left mt-2 mb-3">
            <h5 class="mb-0 h6">Modifier la Marque</h5>
        </div>

        <div class="col-lg-6 mx-auto">
            <div class="card">
                <div class="card-body p-4">
                    <form>
                        <input type="hidden" name="id" value="{{ marque.id }}" id="id">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="nom">Nom</label>
                            <div class="col-sm-9">
                                <input type="text" id="nom" name="name" value="{{ marque.nom }}" class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group mb-0 text-right">
                            <button type="button" onclick="Modifiermarque()" class="btn btn-primary">Modifier</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
{{ parent() }}
<script>
function Modifiermarque() {
    var id = $('#id').val();
    var nom = $('#nom').val().trim();

    if(nom === "") {
        Swal.fire({
            title: "Warning",
            text: "Merci de remplir le champ nom!",
            icon: "warning"
        });
        return;
    }

    $.ajax({
        type: "POST",
        url: '{{ path("modifier_marque") }}',
        data: { 'id': id, 'nom': nom },
        success: function(response) {
            Swal.fire({
                title: "Success!",
                text: "La marque a été modifiée avec succès!",
                icon: "success"
            }).then(() => { location.href = '{{ path("admin_liste_marques") }}'; });
        },
        beforeSend: function(){ $('#loaderAcc').show(); },
        complete: function(){ $('#loaderAcc').hide(); }
    });
}
</script>
{% endblock %}
