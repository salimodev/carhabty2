{% extends 'layout.html.twig' %}

{% block title %}
    Essayara
{% endblock %}

{% block Head %}
    {{ parent() }}
    {% block LinksCss %}
        {{ parent() }}

        <!-- Bootstrap Icons -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<link rel="stylesheet" href="{{ asset('css/stylebutton.css') }}">
        <style>
        /* Mobile : 2 cartes par ligne */
@media (max-width: 576px) {
    .col-sm-6 {
        flex: 0 0 50%;
        max-width: 50%;
    }
}

/* Tablette : 3 cartes */
@media (min-width: 576px) and (max-width: 991px) {
    .col-md-4 {
        flex: 0 0 33.33%;
        max-width: 33.33%;
    }
}

/* Desktop : 4 cartes */
@media (min-width: 992px) {
    .col-md-4 {
        flex: 0 0 25%;
        max-width: 25%;
    }
}

            /* Badge */
            .badge-custom {
                display: inline-block;
                padding: 3px;
                font-size: 11px;
                border-radius: 0 50em 50em 0;
                color: #ff0000;
                font-weight: 600;
                line-height: 26px;
                position: absolute;
                background: #fff;
                z-index: 1;
                top: 20px;
                box-shadow: 2px 1px 6px rgba(0,0,0,0.10), 
                            0 4px 4px rgba(0,0,0,0.06);
            }

            /* Hover Effekt */
            .aiz-card-box {
                transition: transform 0.3s ease, box-shadow 0.3s ease;
                height: 100%;
                display: flex;
                flex-direction: column;
            }

            .aiz-card-box:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 20px rgba(0,0,0,0.15);
            }

            /* Bild - gleiche Höhe */
            .aiz-card-box img {
                height: 200px;
                width: 100%;
                object-fit: cover;
            }

            /* Inhalt auffüllen */
            .aiz-card-box .p-3 {
                flex-grow: 1;
            }

            /* Feine Icons */
            .icon-fine {
                font-size: 14px;
                opacity: 0.7;
            }

            /* 4 Karten pro Reihe */
            @media (min-width: 992px) {
                .col-md-4 {
                    flex: 0 0 25%;
                    max-width: 25%;
                }
            }
        </style>

    {% endblock %}
{% endblock %}

{% block Content %}
{% if app.user and is_granted('ROLE_PARTICULIER') %}

<section class="py-5" style="background-color: #f5f5f5;">
    <div class="container">
        <div class="row align-items-start">

            <!-- SIDEBAR -->
            <div class="col-lg-3">
                {% block sideHeader %}
                    {{ parent() }}
                {% endblock %}
            </div>

            <!-- MAIN CONTENT -->
            <div class="col-lg-9">

              
<div class="aiz-titlebar mt-2 mb-4 d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
    <h4 class="h4 fw-bold mb-2 mb-md-0">Mes annonces</h4>
    <a href="{{ path('add_annonces') }}" class="btn btn-register">
        Publier une annonce
    </a>
</div>


                {% if annonces|length > 0 %}

                <div class="row">
                    {% for annonce in annonces %}
                        <div class="col-md-4 col-sm-6 mb-4">

                            <a href="" class="text-reset text-decoration-none">
                                <div class="aiz-card-box border border-light rounded shadow-sm position-relative bg-white">

                                    <img src="{{ annonce.imagePrincipale }}"
                                         class="rounded-top"
                                         onerror="this.onerror=null;this.src='{{ asset('images/placeholder.png') }}';"
                                         alt="{{ annonce.nom }}">

                                    <div class="p-3">
                                        <div class="fs-15 mb-1">
                                            <span class="fw-700 text-primary">{{ annonce.prix }} TND</span>
                                        </div>

                                        <h3 class="fw-600 fs-14 text-truncate-2 mb-1">{{ annonce.nom }}</h3>

                                        <p class="mb-1 fs-12 text-muted d-flex align-items-center">
                                            <i class="bi bi-geo-alt icon-fine me-1"></i>
                                            {{ annonce.user.adresse ?: 'Adresse non renseignée' }}
                                        </p>

                                        <p class="mb-0 fs-12 text-muted d-flex align-items-center">
                                            <i class="bi bi-clock icon-fine me-1"></i>
                                            <span class="time-ago" data-timestamp="{{ annonce.dateCreation|date('U') }}"></span>
                                        </p>
                                    </div>

                                    <span class="badge-custom">Occasion</span>
                                </div>
                            </a>

                        </div>
                    {% endfor %}
                </div>

                <!-- PAGINATION -->
                <div class="d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(annonces) }}
                </div>

                {% else %}
                    <div class="alert alert-info">Vous n'avez pas encore publié d'annonces.</div>
                {% endif %}

            </div>
        </div>
    </div>
</section>

{% endif %}
{% endblock %}

{% block javascript %}
    {{ parent() }}

    <!-- TIME AGO (FR) -->
    <script src="https://cdn.jsdelivr.net/npm/dayjs@1/dayjs.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/dayjs@1/plugin/relativeTime.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/dayjs@1/locale/fr.js"></script>

    <script>
        dayjs.extend(dayjs_plugin_relativeTime)
        dayjs.locale('fr')

        document.querySelectorAll('.time-ago').forEach(el => {
            let ts = el.dataset.timestamp
            el.textContent = dayjs.unix(ts).fromNow()
        })
    </script>
{% endblock %}
