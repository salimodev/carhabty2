                .col-custom { flex: 0 0 20%; max-width: 20%; }
            }
            @media (max-width: 1199px) { .col-custom { flex: 0 0 25%; max-width: 25%; } }
            @media (max-width: 991px) { .col-custom { flex: 0 0 33.3333%; max-width: 33.3333%; } }
            @media (max-width: 767px) { .col-custom { flex: 0 0 50%; max-width: 50%; } }
            @media (max-width: 575px) { .col-custom { flex: 0 0 100%; max-width: 100%; } }

