{% extends 'vendeurNeuf/layoutVN.html.twig' %}

{% block Head %}
    {{ parent() }}
    {% block LinksCss %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/fontawesome.css') }}">
        <link rel="stylesheet" href="{{ asset('css/stylebutton.css') }}">
        <style>
            /* --- Styles modernes pour la page Voir Offre --- */
            .offre-container { padding: 2rem 0; text-align: center; }
            .offre-header h3 { font-weight: 700; color: #007bff; margin-bottom: 0.5rem; }

            .piece-card {
                background: rgba(255, 255, 255, 0.15);
                backdrop-filter: blur(10px);
                border-radius: 20px;
                box-shadow: 0 8px 30px rgba(0,0,0,0.2);
                padding: 25px;
                transition: transform 0.3s, box-shadow 0.3s;
                min-height: 180px;
                width: 100%;
            }

            .piece-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 40px rgba(0,0,0,0.25);
            }

            .piece-title { font-weight: 700; font-size: 1.3rem; margin-bottom: 15px; color: #000; }

            .piece-badges {
                display: flex;
                flex-wrap: wrap;
                gap: 10px;
                justify-content: center;
            }

            .badge-prix {
                background: linear-gradient(135deg,#ff6b35,#ff8c00);
                color: #fff;
                padding: 6px 12px;
                border-radius: 12px;
                font-weight: 600;
                box-shadow: 0 3px 6px rgba(0,0,0,0.2);
                transition: transform 0.2s;
            }

            .badge-marque {
                background: linear-gradient(135deg,#2ec4b6,#007bff);
                color: #fff;
                padding: 6px 12px;
                border-radius: 12px;
                font-weight: 600;
                box-shadow: 0 3px 6px rgba(0,0,0,0.2);
                transition: transform 0.2s;
            }

            .badge-prix:hover, .badge-marque:hover { transform: scale(1.05); }

            /* Responsive fix */
            @media (max-width: 768px) {
                .col-md-6, .col-lg-4 {
                    flex: 0 0 100% !important;
                    max-width: 100% !important;
                    padding-left: 0 !important;
                    padding-right: 0 !important;
                    margin-bottom: 15px;
                }
                .piece-card {
                    padding: 20px;
                    width: 95%;
                    margin: 0 auto;
                }
                .piece-title { font-size: 1.2rem; }
            }
        </style>
    {% endblock %}
{% endblock %}

{% block title %}Voir l'offre{% endblock %}

{% block page %}
    {{ parent() }}
    {% if app.user and is_granted('ROLE_VENDEUR_NEUF') %}
        <div class="container offre-container">
            <div class="offre-header">
                <h3>Offre n° {{ offre.numeroOffre }}</h3>
                <p>Demande : <strong>{{ offre.demande.code }}</strong></p>
            </div>

            <div class="row justify-content-center">
                {% for piece in offre.demande.pieces %}
                    {% set op = offre.offrePieces|filter(item => item.piece.id == piece.id)|last %}

                    <div class="col-md-6 col-lg-4">
                        <div class="piece-card mx-auto">
                            <div class="piece-title">{{ piece.designation }}</div>
                            <div class="piece-badges">
                                {% if op %}
                                    {% for i in 1..3 %}
                                        {% set prix = attribute(op, 'prix' ~ i) %}
                                        {% set marque = attribute(op, 'marque' ~ i) %}

                                        {% if prix is not empty and marque is not empty %}
                                            <span class="badge-prix">Prix {{ i }} : {{ prix }} DT</span>
                                            <span class="badge-marque">Marque {{ i }} : {{ marque }}</span>
                                        {% endif %}
                                    {% endfor %}
                                {% else %}
                                    <span class="text-muted">Aucune donnée pour cette pièce</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="mt-4 text-center">
                <h5>Observation générale :</h5>
                <p>{{ offre.observation ?: 'Aucune observation.' }}</p>

                <h5>Validité de l'offre :</h5>
                <p>
                    {% if offre.validiteDebut and offre.validiteFin %}
                        {{ offre.validiteDebut|date('d/m/Y') }} - {{ offre.validiteFin|date('d/m/Y') }}
                        <br>
                        {% set joursRestants = (offre.validiteFin|date('U') - "now"|date('U')) / 86400 %}
                        {% if joursRestants > 0 %}
                            <span class="text-primary fw-bold">{{ joursRestants|round(0, 'floor') }} jours restants</span>
                        {% else %}
                            <span class="text-danger fw-bold">Offre expirée</span>
                        {% endif %}
                    {% else %}
                        Non définie
                    {% endif %}
                </p>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
{% endblock %}
