<!DOCTYPE html>
<html lang="fr" dir="ltr">
<head>

			<meta name="app-url" content="http://127.0.0.1:8000">
			<meta name="file-base-url" content="http://127.0.0.1:8000">

			<!-- Required meta tags -->
			<meta charset="utf-8">
			<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon -->
	<link rel="icon"  href="{{ asset ('image/logo2.png')}}" >
    <title>{% block title %}{% endblock %}</title>
    
    {% block LinksCss %}
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css">
     <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700">
    <link href="{{ asset ('css/bootstrap.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset ('css/stylebutton.css') }}">
    <link rel="stylesheet" href="{{ asset ('css/vendors.css') }}">
    <link rel="stylesheet" href="{{ asset ('css/aiz-core.css') }}">
    <link type="text/css" rel="stylesheet" href="{{ asset ('css/responsive.bootstrap4.min.css')}}">
				<link type="text/css" rel="stylesheet" href="{{ asset ('css/dataTables.bootstrap4.min.css')}}">
                <link rel="stylesheet"  href="{{ asset ('css/bootstrap-select.min.css')}}">
    <style>
     /***************************************/
            /* Style Loader */
            /***************************************/
          
            .fadet {
                opacity: 0;
                visibility: hidden;
            }
   


            .loaderAcc {
                position: fixed;
                inset: 0;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: 9999;
                background-color: #fff;
                display: grid;
                place-items: center;
                align-items: center;
                justify-content: center;
                transition: opacity .25s, visibility 1s;
            }
            .loaderAcc > .spinner-border.text-info {
               margin-top: 15%;
               width: 5rem;
               height: 5rem;
               border-left-color: red !important;
               border-right-color: red !important;
               border-bottom-color: red !important;
            }
           
    	/* Style Loader */
				/***************************************/
				.loaderAcc1 {
					position: fixed;
					width: 100%;
					height: 100%;
					text-align: center;
					background-color: rgb(255 255 255 / 72%);
					z-index: 9999;
					display: none;
				}
				.loaderAcc1 > .spinner-border.text-info {
					margin-top: 22%;
					width: 5rem;
					height: 5rem;
					border-left-color: red !important;
					border-right-color: red !important;
					border-bottom-color: red !important;
				}
				/***************************************/
      .list-inline-item.mr-0.active{
               color: #ee2e14;
            }
    </style>
    {% endblock %}
</head>

<body style="background-color: #f5f5f5;"> 

    {% block Header %}
        {{ render(controller('App\\Controller\\HomeController::header', {'uri': app.request.uri})) }}
    {% endblock %}

    {% block Content %}
        {% block loader %}
        <div class="loaderAcc" id="loaderAcc">
		<img src="{{ asset ('assets/img/preloader.gif')}}" alt="preloader">
	</div>
    <div class="loaderAcc1" id="loaderAcc1">
		<div class="spinner-border text-info" role="status">
			<span class="sr-only">Loading...</span>
		</div>
	</div>
        {% endblock %}
{% block sideHeader %}

        {{ render(controller('App\\Controller\\HomeController::sideheader', {'uri': app.request.uri})) }}
        
        {% endblock %}
      
    {% endblock %}

    {% block footer %}
        {{ render(controller('App\\Controller\\HomeController::footer', {'uri': app.request.uri})) }}
    {% endblock %}

    {% block javascript %}
        
        <!-- JS here -->
            <script type="text/javascript" src="{{asset ('js/jquery-3.4.1.min.js') }}"> </script>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"> </script>
            <script src="https://code.jquery.com/jquery-migrate-3.3.2.js"></script>
			<script type="text/javascript" src="{{ asset ('js/bootstrap.min.js') }}"></script>
			<script src="{{ asset ('js/vendors.js') }}"></script>
			<script src="{{ asset ('js/aiz-core.js') }}"></script>
			<script src="{{ asset ('js/dropzone.js') }}"></script>
			<script src="{{ asset ('js/dropzone.min.js') }}"></script>
			<script src="{{ asset ('js/uppy.js') }}"></script>
			<script type="text/javascript" src="{{ asset ('js/jquery.dataTables.min.js') }}"></script>
			<script type="text/javascript" src="{{ asset ('js/dataTables.bootstrap4.min.js') }}"></script>
			<script type="text/javascript" src="{{ asset ('js/dataTables.responsive.min.js') }}"></script>
			<script type="text/javascript" src="{{ asset ('js/responsive.bootstrap4.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset ('js/demande.js') }}"></script>
            <script type="text/javascript" src="{{ asset ('js/bootstrap-select.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset ('js/alert.js') }}" ></script>
            <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
			
			<!--contact js-->
            <script>
            function opensidebar(){
                  var elem = document.getElementById('menumobilenav')
               $('#menumobilenav').each(function(){
                   $(this).removeClass('active');
               }); 
              $('#menumobilenav').addClass('active');
             }
             function closenavbar(){
                  var elem = document.getElementById('menumobilenav')
               $('#menumobilenav').each(function(){
                   $('#menumobilenav').removeClass('active');
               }); 
            }
            </script>
             <script type="text/javascript">
               const fadeOut = () => {
                const loaderWrapper = document.querySelector('.loaderAcc');
                if (loaderWrapper) {
                  loaderWrapper.classList.add('fadet');
                }
              };
              window.addEventListener('load', fadeOut);
                 </script> 
    {% endblock %}

</body>
</html>
