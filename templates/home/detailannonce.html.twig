<script>
let chatModalInstance;

function ouvrirChat(annonceId, annonceNom, annonceImg, vendeurNom, receiverId) {
    // Mettre à jour l'image et le nom de l'annonce
    document.getElementById('chatAnnonceImg').src = annonceImg;
    document.getElementById('chatAnnonceNom').textContent = annonceNom;
    document.getElementById('chatVendeurNom').textContent = vendeurNom;
    document.getElementById('chatPieceImage').value = annonceImg;


    // Ouvrir la modal
    const chatModalEl = document.getElementById('chatModal');
    chatModalInstance = new bootstrap.Modal(chatModalEl);
    chatModalInstance.show();

    // Ajouter l'événement bouton envoyer
    document.getElementById('sendChatBtn').onclick = function() {
        let content = document.getElementById('chatMessageInput').value.trim();
        if(content === '') {
            alert("Veuillez écrire un message !");
            return;
        }
        let pieceImage = document.getElementById('chatPieceImage').value;
        fetch("{{ path('part_message', {'receiverId': 0}) }}".replace('0', receiverId), {
            
            method: "POST",
            headers: {'Content-Type': 'application/x-www-form-urlencoded'},
            body: 'content=' + encodeURIComponent(content) + 
                  '&pieceImage=' + encodeURIComponent(pieceImage) +'&annonceId=' + encodeURIComponent(annonceId) 
        })
        .then(res => res.json())
        .then(data => {
            if(data.success){
                document.getElementById('chatMessageInput').value = '';
                document.getElementById('chatStatus').textContent = 'Message envoyé !';
                setTimeout(() => { document.getElementById('chatStatus').textContent = ''; }, 2000);
            } else {
                document.getElementById('chatStatus').textContent = 'Erreur lors de l\'envoi';
            }
        });
    }

    // Fermer modal si bouton close est cliqué (optionnel, Bootstrap le gère normalement)
    chatModalEl.querySelector('.btn-close').addEventListener('click', () => {
        chatModalInstance.hide();
    });
}

</script>


