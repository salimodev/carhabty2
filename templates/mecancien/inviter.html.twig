{% extends 'layout.html.twig' %}

{% block title %}Essayara{% endblock %}

{% block LinksCss %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/stylebutton.css') }}">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<style>
/* Container */
.inviter-container {
    max-width: 1100px;
    width: 100%;
    margin: 3rem auto;
    padding: 1.5rem;
    background: #f9f9f9;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    box-sizing: border-box;
}

.inviter-container h1 {
    text-align: center;
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 2.5rem;
    color: #222;
}

/* Content */
.inviter-content {
    display: flex;
    align-items: stretch;
    gap: 2rem;
}

/* Text */
.inviter-text {
    flex: 1;
    font-size: 1.05rem;
    color: #555;
    line-height: 1.7;
    word-wrap: break-word;
}

/* Divider */
.inviter-divider {
    width: 4px;
    background: linear-gradient(45deg, #00B7B7, #008F8F);
    border-radius: 10px;
}

/* Video */
.inviter-video-wrapper {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.inviter-video {
    width: 100%;
    max-width: 260px;
    aspect-ratio: 9 / 16;
    border-radius: 20px;
    object-fit: cover;
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
}

/* Button */
.btn-registerinvit {
    padding: 0.75rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 50px;
    background: linear-gradient(45deg, #00B7B7, #008F8F);
    color: #fff;
    border: none;
    transition: 0.3s;
    display: inline-block;
}

.btn-registerinvit:hover {
    background: linear-gradient(45deg, #008F8F, #00B7B7);
    color: #fff;
    text-decoration: none;
}

/* Gradient text */
.gradient-text {
    background: linear-gradient(45deg, #00B7B7, #008F8F);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

/* Responsive */
@media (max-width: 768px) {
    .inviter-container h1 {
        font-size: 1.7rem;
    }

    .inviter-content {
        flex-direction: column-reverse;
        gap: 1.5rem;
    }

    .inviter-divider {
        width: 100%;
        height: 4px;
        margin: 1rem 0;
    }

    .inviter-video {
        max-width: 220px;
    }
}
</style>
{% endblock %}

{% block Content %}
    {{ parent() }}

<section class="inviter-container">
    <h1 data-aos="fade-down">
        Bienvenue,
        <span class="gradient-text">
            professionnel de l’automobile (mécanicien, tôlier…)
        </span> !
    </h1>

    <div class="inviter-content" data-aos="fade-up">
        <div class="inviter-text">
            {% if invitePage %}
                {{ invitePage.description|raw }}
            {% else %}
                <p>
                    En tant que professionnel de l’automobile, vous pouvez créer des demandes
                    de pièces pour les véhicules de vos clients.
                </p>
                <p>
                    Recevez des offres des vendeurs et comparez facilement les prix.
                </p>
            {% endif %}

            <br>
            <a href="{{ path('app_demande') }}" class="btn-registerinvit">
                Demandez | اطلب قطعة
            </a>
        </div>

        <div class="inviter-divider"></div>

        <div class="inviter-video-wrapper">
            <video class="inviter-video" controls playsinline>
                <source src="{{ invitePage and invitePage.videoPath
                    ? invitePage.videoPath
                    : asset('videos/descriptif_mecanicien.mp4') }}"
                    type="video/mp4">
            </video>
        </div>
    </div>
</section>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ once: true, offset: 100 });
    </script>
{% endblock %}
