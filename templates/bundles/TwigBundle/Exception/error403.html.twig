{% extends 'layout.html.twig' %}

{% block title %}403 - Accès refusé{% endblock %}

{% block LinksCss %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset ('css/stylebutton.css') }}">
<style>
.error-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 70vh;
    text-align: center;
    font-family: 'Arial', sans-serif;
    color: #333;
}
.error-container h1 {
    font-size: 8rem;
    color: #00B7B7;
    margin: 0;
}
.error-container h2 {
    font-size: 2rem;
    margin: 10px 0 20px;
}
.error-container p {
    font-size: 1.2rem;
    margin-bottom: 30px;
}
.error-container a {
    display: inline-block;
    padding: 12px 25px;
    background-color: #00B7B7;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: 0.3s;
}
.error-container a:hover {
    background-color: #00B7B7;
}
</style>
{% endblock %}

{% block MainContent %}
<div class="error-container">
    <h1>403</h1>
    <h2>Accès refusé</h2>
    <p>Vous n’avez pas la permission d’accéder à cette page.</p>
    <a href="{{ path('Accueil') }}">Retour à l'accueil</a>
</div>
{% endblock %}
