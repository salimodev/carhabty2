{% extends 'layout.html.twig' %}

{% block title %}Essayara{% endblock %}

{% block LinksCss %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/stylebutton.css') }}">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <style>
.inviter-container {
    max-width: 1100px;
    margin: 3rem auto;
    padding: 2rem;
    background: #f0f8ff;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.08);
}

.inviter-container h1 {
    text-align: center;
    font-size: 2.3rem;
    font-weight: 700;
    margin-bottom: 3rem;
    color: #222;
}

.inviter-content {
    display: flex;
    align-items: stretch;
    gap: 2rem;
}

/* Texte */
.inviter-text {
    flex: 1;
    font-size: 1.1rem;
    color: #555;
    line-height: 1.7;
}

/* Diviseur */
.inviter-divider {
    width: 4px;
    background: linear-gradient(45deg, #00B7B7, #008F8F);
    border-radius: 10px;
    align-self: stretch;
}

/* Vidéo */
.inviter-video-wrapper {
    flex: 1;
    display: flex;
    justify-content: center;
}

.inviter-video {
    width: 260px;
    aspect-ratio: 9 / 16;
    border-radius: 20px;
    object-fit: cover;
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
}

/* Bouton */
.btn-registerveninvit {
    padding: 0.75rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 50px;
    background: linear-gradient(45deg, #00B7B7, #008F8F);
    color: #fff;
    transition: 0.3s;
    border: none;
}

.btn-registerveninvit:hover {
    background: linear-gradient(45deg, #008F8F, #00B7B7);
    color: #fff;
    text-decoration: none;
}

.gradient-text {
    background: linear-gradient(45deg, #00B7B7, #008F8F);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
}

/* Responsive / Mobile */
@media (max-width: 768px) {
    .inviter-content {
        flex-direction: column-reverse; /* vidéo avant texte */
        gap: 1.5rem;
    }

    .inviter-divider {
        width: 100%;
        height: 4px;
    }

    .inviter-video {
        width: 220px;
    }
}
    </style>
{% endblock %}

{% block Content %}
    {% block loader %}
        {{ parent() }}
    {% endblock %}

<section class="inviter-container">
   <h1 data-aos="fade-down" data-aos-duration="1000">
    Bienvenue, <span class="gradient-text">Vendeur de pièces neuves</span> !
</h1>

<div class="inviter-content" data-aos="fade-up">
    <div class="inviter-text">
        {% if invitePage %}
            {{ invitePage.description|raw }}
        {% else %}
            <p>En tant que vendeur de pièces neuves, vous pouvez publier vos offres sur les demandes des propriétaires.</p>
            <p>Recevez des notifications instantanées et maximisez vos ventes.</p>
            <p>Répondez rapidement pour améliorer votre visibilité.</p>
        {% endif %}
  <br><br>
        <a href="{{ path('app_register') }}" class="btn btn-registerveninvit">
           Créer un compte
        </a>
    </div>

    <div class="inviter-divider"></div>

    <div class="inviter-video-wrapper">
        {% if invitePage and invitePage.videoPath %}
            <video class="inviter-video" controls>
                <source src="{{ invitePage.videoPath }}" type="video/mp4">
            </video>
        {% else %}
            <video class="inviter-video" controls>
                <source src="{{ asset('videos/descriptif_vendeur_neuf.mp4') }}" type="video/mp4">
            </video>
        {% endif %}
    </div>
</div>
</section>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            once: true,
            offset: 100
        });
    </script>
{% endblock %}
