{% extends 'layoutAdmin.html.twig' %}

{% block Head %}
    {{ parent() }}
    {% block LinksCss %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/stylebutton.css') }}">
        <style>
            div.dataTables_wrapper div.dataTables_filter input {
                margin-left: 0.5em;
                display: inline-block;
                width: 75%;
            }
        </style>
    {% endblock %}
{% endblock %}

{% block title %}Ajouter Modèle{% endblock %}
{% block loader %} {{ parent() }} {% endblock %}
{% block sidebar %} {{ parent() }} {% endblock %}

{% block page %}
{{ parent() }}

<div class="px-15px px-lg-25px">
    <div class="aiz-titlebar text-left mt-2 mb-3">
        <h1 class="h3">Modèles</h1>
    </div>

    <div class="row">
        <!-- Liste des modèles -->
        <div class="col-md-7">
            <div class="card">
                <div class="card-header row gutters-5">
                    <div class="col text-center text-md-left">
                        <h5 class="mb-md-0 h6">Liste des modèles</h5>
                    </div>
                </div>
                <div class="card-body">
                    <table id="tabModele" class="display nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom du modèle</th>
                                <th>Marque</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for modele in listModeles %}
                            <tr>
                                <td>{{ modele.id }}</td>
                                <td>{{ modele.nom }}</td>
                                <td>{{ modele.marque.nom }}</td>
                                <td class="text-right">
                                    <a onclick="supprimerModele($(this),'{{ modele.id }}');" class="btn btn-soft-danger btn-icon btn-circle btn-sm confirm-delete" title="Supprimer">
                                        <i class="las la-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Ajouter nouveau modèle -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 h6">Ajouter nouveau modèle</h5>
                </div>
                <div class="card-body">
                    <form>
                        <input type="hidden" name="_token" value="{{ csrf_token('ajouter_modele') }}">
                        <div class="form-group mb-3">
                            <label for="marque">Marque</label>
                            <select id="marque" class="form-control" required>
                                <option value="">-- Sélectionnez une marque --</option>
                                {% for marque in listMarques %}
                                    <option value="{{ marque.id }}">{{ marque.nom }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="nomModele">Nom du modèle</label>
                            <input type="text" id="nomModele" class="form-control" placeholder="Nom du modèle" required>
                        </div>
                        <div class="form-group mb-3 text-right">
                            <button type="button" onclick="ajouterModele()" class="btn btn-register">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
{{ parent() }}
<script>
$(document).ready(function() {
    $('#tabModele').DataTable({
        language: { "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json" },
        responsive: true
    });
});

function ajouterModele() {
    var marqueId = $('#marque').val();
    var nomModele = $('#nomModele').val().trim();

    if(!marqueId || nomModele === "") {
        Swal.fire({ title: "Warning", text: "Merci de remplir tous les champs !", icon: "warning" });
        return;
    }

    $.ajax({
        type: "POST",
        url: '{{ path("ajouter_modele") }}',
        data: { 'marque': marqueId, 'nom': nomModele },
        success: function(response) {
            Swal.fire({ title: "Success!", text: "Le modèle a été ajouté avec succès !", icon: "success" })
            .then(() => { location.reload(); });
        },
        beforeSend: function(){ $('#loaderAcc').show(); },
        complete: function(){ $('#loaderAcc').hide(); }
    });
}

function supprimerModele(element, id) {
    Swal.fire({
        title: 'Êtes-vous sûr de vouloir supprimer ce modèle?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#28a745',
        cancelButtonColor: '#f62718',
        confirmButtonText: 'Supprimer',
        cancelButtonText: 'Annuler'
    }).then((result) => {
        if(result.value) {
            $.ajax({
                type: "POST",
                url: "{{ path('Supprimer_modele') }}",
                data: { 'id': id },
                success: function() {
                    Swal.fire({ title: "Success!", text: "Le modèle a été supprimé avec succès!", icon: "success" });
                     location.reload();
                }
            });
        }
    });
}
</script>
{% endblock %}
