{% extends 'layout.html.twig' %}

{% block title %}Cr√©er une compte{% endblock %}

{% block Head %}
    {{ parent() }}
    {% block LinksCss %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/stylebutton.css') }}">
        <style>
            .password-container {
                position: relative;
            }

            .password-toggle {
                position: absolute;
                top: 50%;
                right: 15px;
                transform: translateY(-50%);
                cursor: pointer;
                font-size: 1.2rem;
                color: #555;
                user-select: none;
            }
        </style>
    {% endblock %}
{% endblock %}

{% block Content %}
<section class="gry-bg py-4" style="background-color: #f5f5f5;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-8 col-xl-8 col-lg-8 col-md-12">
                <div class="card shadow-lg border-0 rounded-4" style="background-color:#ffff;">
                    <div class="text-center pt-5">
                        <h1 class="h3 fw-bold">Cr√©er une compte</h1>
                        <p class="text-muted" style="color: #000000ff !important;">
                            Remplissez le formulaire pour vous inscrire
                        </p>
                    </div>

                    <div class="px-4 py-5">
                        <form id="reg-form" class="form-default" method="POST">
                            {{ form_start(registrationForm) }}

                            <div class="row g-3 mb-3">
                                <div class="col-md-4">
                                    {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control rounded-pill','style':'background-color: #dfdfdf;', 'placeholder':'Nom ou raison sociale'}}) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control rounded-pill','style':'background-color: #dfdfdf;', 'placeholder':'Pr√©nom'}}) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(registrationForm.roles, { 'attr': { 'class': 'form-select rounded-pill', 'style': 'background-color: #dfdfdf;' } }) }}
                                </div>
                            </div>

                            <div class="row g-3 mb-3">
                                <div class="col-md-4">
                                    {{ form_row(registrationForm.adresse, {'attr': {'class': 'form-select rounded-pill','style':'background-color: #dfdfdf;', 'placeholder':'Adresse'}}) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(registrationForm.tel1, {'attr': {'class': 'form-control rounded-pill','style':'background-color: #dfdfdf;', 'placeholder':'T√©l√©phone 1'}}) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(registrationForm.tel2, {'attr': {'class': 'form-control rounded-pill','style':'background-color: #dfdfdf;', 'placeholder':'T√©l√©phone 2'}}) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control rounded-pill','style':'background-color: #dfdfdf;', 'placeholder':'Email'}}) }}
                            </div>

                            <div class="mb-3 password-container">
                                {{ form_row(registrationForm.plainPassword, {
                                    'attr': {
                                        'class': 'form-control rounded-pill password-field',
                                        'style': 'background-color: #dfdfdf; padding-right: 40px;',
                                        'placeholder': 'Mot de passe'
                                    }
                                }) }}
                                <span class="password-toggle" onclick="togglePassword()">üëÅ</span>
                            </div>

                            <div class="mb-3">
                                <div class="g-recaptcha" data-sitekey="6Ld_nrsZAAAAAO-MowQQPfbD9yoio52GiMgUrmRX"></div>
                            </div>

                            <button type="submit" class="btn btn-info w-100 rounded-pill fw-bold py-2" style="background-color: #2ec4b6; color: #fff; border: none;">
                                Cr√©er une compte
                            </button>

                            {{ form_end(registrationForm) }}
                        </form>

                        <div class="text-center mt-4">
                            <p class="mb-1" style="color: #000000ff !important;">Vous avez d√©j√† un compte ?</p>
                            <a href="{{ path('app_login') }}" class="btn btn-Dashboard1 btn-outline-light rounded-pill">S'identifier</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascript %}
{{ parent() }}
<script>
function togglePassword() {
    const input = document.querySelector('.password-field');
    const toggle = document.querySelector('.password-toggle');

    if (!input) return;

    if (input.type === 'password') {
        input.type = 'text';
        toggle.textContent = 'üôà';
    } else {
        input.type = 'password';
        toggle.textContent = 'üëÅ';
    }
}
</script>
{% endblock %}
