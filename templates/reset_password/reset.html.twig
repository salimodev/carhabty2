{% extends 'layout.html.twig' %}
{% block Head %}
	{{ parent() }}

 {% block LinksCss %}
 {{ parent() }}
 {% endblock %}

{% endblock %}
{% block title %}Nouveau mot de passe
{% endblock %}

{% block Content %}
<section class="gry-bg py-5" style="background: linear-gradient(135deg, #1a1a2e 0%, #2c2c54 100%); min-height: 100vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-xl-5 col-lg-6 col-md-8">
                <div class="card shadow-lg border-0 rounded-4" style="background-color: #ffffff;">
                    <div class="text-center pt-5">
                        <h1 class="h3 fw-bold">Nouveau mot de passe</h1>
                        <p class="text-muted" style="color: #000000ff !important;">
                            Entrez votre nouveau mot de passe pour réinitialiser votre compte
                        </p>
                    </div>

                    <div class="px-4 py-5">
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                {{ flash_error }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    <form  role="form" method="POST">
                         {{ form_row(passForm.password, {
                                    'attr': {
                                        'class': 'form-control rounded-pill',
                                        'placeholder': 'Nouveau mot de passe',
                                        'style': 'background-color: #dfdfdf;'
                                    }
                                }) }} <br>
                         
                        {{ form_end(passForm) }}
                   
                       
                    </form>
                       
                           
                        <div class="text-center mt-4">
                            <a href="{{ path('app_login') }}" class="btn btn-outline-light rounded-pill" style="color: #000000ff !important;">
                                Retour à la connexion
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}

{% block footer %}
{{ parent() }}
{% endblock %}
{% block javascript %}
{{ parent() }}

{% endblock %}